{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "lib": ["ESNext", "DOM"],
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": false
